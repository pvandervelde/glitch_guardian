{
  "name": "glitch-guardian",
  "version": "0.1.0",
  "private": true,
  "description": "A github app that handles administrative tasks for github projects, issues and PRs",
  "author": "Petrik van der Velde",
  "license": "Apache-2.0",
  "homepage": "https://github.com/pvandervelde/glitch_guardian/",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.json",
    "doc": "typedoc --options .typedoc.json --plugin .typedoc/typedoc_ga.mjs",
    "lint:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"docs/*.md\" *.md tsconfig.json package.json --end-of-line auto",
    "lint": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"docs/*.md\" *.md tsconfig.json package.json --end-of-line auto",
    "pretest": "npm run build && tsc --noEmit -p test",
    "start": "probot run ./lib/index.js",
    "test:coverage": "vitest run --coverage",
    "test:dev": "vitest --ui --coverage",
    "test": "vitest run"
  },
  "dependencies": {
    "probot": "^13.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nock": "^14.0.0-beta.5",
    "smee-client": "^2.0.0",
    "vitest": "^1.3.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">= 18"
  },
  "type": "module"
}